# Database Automation Suite Environment Variables
# Copy this file to .env and customize for your environment

# Application Configuration
LOG_LEVEL=INFO
VERSION=2.0.0

# Docker Compose Ports
AUTOMATION_PORT=8000
POSTGRES_PORT=5432
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
REDIS_PORT=6379
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# PostgreSQL Configuration
POSTGRES_DB=test_automation
POSTGRES_USER=automation_user
POSTGRES_PASSWORD=secure_postgres_password

# SQL Server Configuration (if using)
SQLSERVER_HOST=localhost
SQLSERVER_PORT=1433
SQLSERVER_DB=master
SQLSERVER_USER=sa
SQLSERVER_PASSWORD=secure_sqlserver_password

# Email/SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_PASSWORD=your_smtp_password
ALERT_FROM_EMAIL=db-automation@yourcompany.com
DBA_EMAIL=dba-team@yourcompany.com
SRE_EMAIL=sre-team@yourcompany.com

# Backup Configuration
BACKUP_PATH=/var/backups/databases
BACKUP_RETENTION_DAYS=30

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
BACKUP_BUCKET=your-backup-bucket

# Azure Configuration (Optional)
AZURE_STORAGE_ACCOUNT=yourstorageaccount
AZURE_STORAGE_KEY=your_storage_key
AZURE_CONTAINER=database-backups

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=secure_grafana_password
REDIS_PASSWORD=secure_redis_password

# Security
DATABASE_ENCRYPTION_KEY=your-32-character-encryption-key
SECRET_KEY=your-secret-key-for-sessions

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Build Configuration
BUILD_DATE=2024-07-01T12:00:00Z
VCS_REF=main

# Development/Testing
TESTING=false
DEBUG=false